<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/backgc"
    tools:context="example.com.chairul.projectuaschairulrahmant.CityPilem">
<TableLayout
    android:id="@+id/tblCity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TableRow>
    <TextView
        android:id="@+id/slcCity"
        android:text="Select City   "
        android:textSize="20dp"
        android:textColor="@color/grey"
        android:layout_marginTop="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/spnCity"
        android:layout_marginTop="200dp"
        android:entries="@array/spncity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Spinner>

    </TableRow>
</TableLayout>
    <Button
        android:id="@+id/btnCity"
        android:textSize="30dp"
        android:text="PILIH "
        android:layout_below="@+id/tblCity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
